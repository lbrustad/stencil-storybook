@import 'functions/calc.styl'

.btn
    background-color: var(--vn-button-color);
    color: var(--theme-text-color);
    display: inline-block;
    font-family: var(--theme-font);
    font-size: 14.68px;
    padding: 10px 20px;
    text-decoration: none;
    text-transform: uppercase;

.size-small
    padding: 6px 25px;
    font-weight: 500;
    letter-spacing: 1.25px;
    line-height: 16px;

.size-large
    padding: 21px 31px;
    font-size: 16.77px;
    text-transform: none;
    line-height: 28px;

.color-p1
    background-color: var(--theme-p1)

.color-p2
    background-color: var(--theme-p2)

.color-p3 {
    background-color: var(--theme-p3)
    &:hover {
        border: 3px solid #ECBD60
        padding: 18px 28px;
    }
    &:focus {
        border: 2px solid #FFF
        box-shadow: 0 0 1px 2px #EEB33C;
        padding: 19px 29px;
    }
}

.color-p4 {
    background-color: var(--theme-p4)
    opacity .7
    padding: 4px 11px
    &:hover {
        text-decoration: var(--theme-text-color) underline;
    }
    &:focus {
        background-color: #FFFFFF
        box-shadow: 0 0 1px 2px #27777A
    }
}
